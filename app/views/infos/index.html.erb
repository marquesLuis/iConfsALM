<h1>Listing infos</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Value</th>
    <th>Person</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @infos.each do |info| %>
  <tr>
    <td><%= info.type %></td>
    <td><%= info.value %></td>
    <td><%= info.person_id %></td>
    <td><%= link_to 'Show', info %></td>
    <td><%= link_to 'Edit', edit_info_path(info) %></td>
    <td><%= link_to 'Destroy', info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

