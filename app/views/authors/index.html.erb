<h1>Listing authors</h1>

<table>
  <tr>
    <th>Person Name</th>
    <th>Name to show if person is null.</th>
    <th>Document title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @authors.each do |author| %>
      <tr>
        <% if author.person_id %>
            <td><%= author.person.full_name %></td>

        <% else %>
            <td>Has no participant.</td>
        <% end %>
        <td><%= author.name %></td>
        <td><%= author.document.title %></td>
        <td><%= link_to 'Show', author %></td>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

<br/>

