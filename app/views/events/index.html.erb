<h1>Listing events</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Event kind</th>
    <th>Begin</th>
    <th>End</th>
    <th>Event group</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.description %></td>
    <td><%= event.event_kind %></td>
    <td><%= event.begin  %></td>
    <td><%= event.end %></td>
    <td><%= event.event_group_id %></td>
    <td><%= link_to 'Show', event_group_event_path(@group,event) %></td>
    <td><%= link_to 'Edit', edit_event_group_event_path(@group,event) %></td>
    <td><%= link_to 'Destroy', event_group_event_path(@group,event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

