<%= form_for([@group,@event]) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">

    <%= f.label :event_kind %><br />
    <%= f.select(:event_kind, options_for_select(Event.get_types())) %>

  </div>
  <div class="field">
    <%= f.label :begin %><br />
    <%= f.time_select :begin %>
  </div>
  <div class="field">
    <%= f.label :end %><br />
    <%= f.time_select :end %>
  </div>
    <div class="field">
      <%= f.label 'All Docs' %><br />
      <%= collection_select(:document, :id , @docs, :id ,:title,{:include_blank => true}, {:multiple => true,:include_blank => true})  %>
    </div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
