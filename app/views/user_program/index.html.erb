<div class='centralized'>
  <div class="inline">
    <%= link_to 'Show Personalized', {:controller => "user_program", :action => "index"},:class => 'classname', :method => 'get' %>
    <%= link_to 'Show Complete', {:controller => "user_program", :action => "show_complete"},:class => 'classname', :method => 'get' %>
  </div>
  <h1>Personalized Calendar</h1>
</div>
<% if @events.any? %>
    <div id='calendar'></div>
    <script type="text/javascript">
        <% if @theme==1 %>
        c1 = '#A65A00'
        c2 = 'goldenrod'
        <% else
             if @theme==2 %>
        c1 = 'darkgreen'
        c2 = 'limegreen'
        <% else
             if @theme==3 %>
        c1 = 'darkblue'
        c2 = 'cornflowerblue'
        <%end %>
        <%end %>
        <%end %>

        window.onload = function () {
            $('#calendar').empty().fullCalendar({
                defaultView: 'agendaWeek',
                editable: false,
                allDaySlot: false,
                minTime: <%= @min_hour %>,
                maxTime: <%= @max_hour %>,
                year: <%= @begin_year %>,
                month: <%= @begin_month %>,
                date: <%= @begin_day %>,
                firstDay: <%= @begin_weekday %>,


                header: false,
                events: [
                    <% @events.each do |event| %>
                    <% group = event.event_group %>
                    {

                        attending: true,
                        remove: true,
                        <% if event.event_kind == 'Paper Session' %>
                        <% puts("AAAAAAAA") %>
                        textColor : "white",
                        <% else if event.event_kind == 'Social Event' %>
                        textColor : "white",
                        <% else %>
                        textColor : "black",
                        <% end %>
                        <% end %>
                        borderColor: "black",
                        id: '<%= event.id %>',
                        title: '<%= event.event_kind %> - <%= event.title %>',
                        event_kind: "<%= event.event_kind %>",
                        start: new Date(<%= group.date.year %>, <%= ((group.date.month) -1) %>, <%= group.date.day %>, <%= event.begin.hour %>, <%= event.begin.min %>),
                        end: new Date(<%= group.date.year %>, <%= ((group.date.month) -1) %>, <%= group.date.day %>, <%= event.end.hour %>, <%= event.end.min %>),
                        allDay: false,
                        url: '/user_program/show_event/?id=<%= event.id %>'
                    },
                    <% end %>
                ]
            });
        };
    </script>
<% else %>
    <p class="centralized">You have not added any events! Try viewing the complete program and add some.</p>
    <p class="centralized">You can also get
      started <%= link_to "by clicking here.", {:controller => 'user_program', :action => 'create_suggested'} %></p>
<% end %>