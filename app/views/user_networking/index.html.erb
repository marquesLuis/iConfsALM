<h1  class='centralized'>Networking</h1>

<div class='centralized'>
  <div>
    <form name='selection' action='/user_networking/show_selection' method='post' data-remote='true'>
      <select name="selection">
        <option value="0">All</option>
        <option value="-1">My Preferences</option>
        <% @areas_of_interest.each do |area| %>
            <option value=<%= area.id %>><%= area.name %></option>
        <% end %>
      </select>
      <input type='submit' value='Show'>
    </form>
  </div>
  <div>
    <%= link_to 'New', {:controller => "user_networking", :action => "new"} %></td>

  </div>
</div>
<div id='networking_list'>

  <% if @showing.any? %>
      <table>
        <td>
          <table>
            <tr>
              <th>Creator</th>
              <th>Title</th>
            </tr>

            <% @showing.each do |networking| %>
                <tr>
                  <% person = networking.person %>
                  <td><%= link_to person.full_name, {:controller => "user", :action => "show_all_participants", :id => person.id} %></td>
                  <td><%= link_to networking.title, {:controller => "user_networking", :action => "show", :id => networking.id},  :remote => true %></td>
                  <% if networking.person_id == current_registry.person_id %>
                      <td><%= link_to 'Delete', {:controller => "user_networking", :action => "delete", :id => networking.id}, :method => 'post' %></td>
                  <% end %>
                </tr>
            <% end %>
          </table>
        </td>
        <td id='networking' class='limited_content_listed'>
          <% if @networking %>
              <script type="text/javascript">
                  window.onload = function () {
                      $.ajax("/user_networking/show/?id=<%= @networking.id%>");
                  };
              </script>
          <% else %>
              <p>Select a topic on the left.</p>
          <% end %>

        </td>
      </table>
  <% else %>
      <p>Nothing to show! Add one yourself!</p>
  <% end %>
</div>
