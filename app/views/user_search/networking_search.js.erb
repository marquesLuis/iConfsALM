html = ""
<% @networking.each do |networking| %>
html += "<tr class='result'>"
    html += '<td  colspan="2">'
        html += "<p><%= escape_javascript(link_to networking.title,  {:controller => "user_networking", :action => "index", :id => networking.id}) %></p>"

    html += '</td>'
    html += '<td colspan="42">'
    html += "<p>Content:</p>"
    <% networking.content.split(/\r\n/).each do |line| %>
        html += "<p><%= line %></p>"
    <% end %>


    html += '</td>'
html += '</tr>'
<% end %>
html += '<tr class="result"><td>'
html += '<%= escape_javascript(will_paginate @networking )%>'
html += '</td>'
html += '</tr>'

$(".result").fadeOut("slow", function () {
    $(this).empty();
    $(this).remove();
    $(".pagination a").attr( 'data-remote', 'true' );
});
$("#search_results").append(html).children.each(function () {
    $(this).fadeIn()
    $(".pagination a").attr( 'data-remote', 'true' );
});




