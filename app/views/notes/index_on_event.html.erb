<% if @notes.any? %>
    <table class="p90">
      <tr>
        <th>Note</th>
        <th></th>
        <th></th>

      </tr>

      <% @notes.each do |note| %>
          <tr>
            <td class="limited_content p90"><%= note.content %></td>
            <td class="p5"><%= link_to "Edit", {:controller => "notes", :action => "edit_on_event", :note => note}, :class => 'classname' %></td>
            <td class="p5"><%= link_to "Delete", {:controller => "notes", :action => "destroy_on_event", :note => note}, :method => 'post', :class => 'classname' %></td>
          </tr>
      <% end %>
<% else %>
    <p>You haven't added notes about this event!</p>
<% end %>

</table>
<p><%= link_to "New Note", {:controller => "notes", :action => "new_on_event", :event_id => @event.id}, :class => 'classname' %></p>

