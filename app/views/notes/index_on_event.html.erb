<% if @notes.any? %>
    <table>
      <tr>
        <th>Note</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

      <% @notes.each do |note| %>
          <tr>
            <td class="limited_content max_width_900"><%= note.content %></td>
            <td><%= link_to "Show", {:controller => "notes", :action => "show_on_event", :note => note} %></td>
            <td><%= link_to "Edit", {:controller => "notes", :action => "edit_on_event", :note => note} %></td>
            <td><%= link_to "Destroy", {:controller => "notes", :action => "destroy_on_event", :note => note}, :method => 'post' %></td>
          </tr>
      <% end %>
<% else %>
    <p>You haven't added notes about this event!</p>
<% end %>

</table>
<p><%= link_to "New Note", {:controller => "notes", :action => "new_on_event", :event_id => @event.id} %></p>

