<%= form_tag({:controller => "notes", :action => "create_on_participant"}, :method => 'post', :class => 'centralized') do %>
    <div class="field">
      <%= text_area_tag(:content, '', :size => "128x12") %>
    </div>
    <div class="field">
      <%= text_field_tag(:participant_id, {}, :value => @participant.id, :type => 'hidden') %>
    </div>
    <div class="inline">
      <%= submit_tag("Save", :class => 'classname') %>
      <p class="centralized">
        <%= link_to 'Back', {:controller => "user", :action => "show_all_participants", :id => @participant.id}, :class => 'classname' %>
      </p>
    </div>

<% end %>