<%= form_tag({:controller => "notes", :action => "create_on_event"}, :method => 'post', :class => 'centralized') do %>
    <div class="field">
      <%= text_area_tag(:content, '', :size => "24x6") %>
    </div>
    <div class="field">
      <%= text_field_tag(:event_id,{}, :value => @event.id, :type=>'hidden' ) %>
    </div>
    <div class="actions">
      <%= submit_tag("Create") %>
    </div>

<% end %>