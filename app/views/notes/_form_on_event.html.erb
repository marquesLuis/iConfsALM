<%= form_tag({:controller => "notes", :action => "create_on_event"}, :method => 'post', :class => 'centralized') do %>
    <div class="field">
      <%= text_area_tag(:content, '', :size => "128x12") %>
    </div>
    <div class="field">
      <%= text_field_tag(:event_id,{}, :value => @event.id, :type=>'hidden' ) %>
    </div>
    <div class="actions inline">
      <%= submit_tag("Save", :class => 'classname') %>
    <p class="centralized">
      <%= link_to 'Back', {:controller => "user_program", :action => "show_event", :id => @event.id}, :class => 'classname' %>
    </p>
    </div>

<% end %>