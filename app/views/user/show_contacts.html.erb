<div class="centralized">
  <h1>Contacts</h1>

  <div class="inline">
    <%= button_to 'Contacts', {:controller => 'user', :action => 'show_contacts'}, :method => 'get' %>
    <%= button_to 'Pending ('<<@pending_amount.to_s<<')', {:controller => 'user', :action => 'show_pending_contacts'}, :method => 'get' %>
    <%= button_to 'All Participants', {:controller => 'user', :action => 'show_all_participants'}, :method => 'get' %>
    <%= button_to 'Rejected', {:controller => 'user', :action => 'show_rejected_contacts'}, :method => 'get' %>
  </div>
</div>

<% if @contacts.any? %>
    <h3>Contacts:</h3>
    <table>
      <td class="right_border">
        <table>
          <tr>
            <th>Photo</th>
            <th>Name</th>
          </tr>
          <% @contacts.each do |contact| %>
              <tr>
                <td class="bottom_border">
                  <% if contact.photo.nil? %>
                      <%= link_to image_tag("/images/defaultPerson100.jpg", :border => 0, :alt => '', :title => 'No Photo'), {:controller => "user", :action => "show_participant", :id => contact.id, :remote => true}, :class => 'Item-Image' %>
                  <% else %>
                      <img src='/user/get_profile_image?name=<%= contact.photo %>' alt='<%= contact.photo %>' class='person_thumbnail'>
                  <% end %>
                </td>
                <td class="bottom_border"><%= link_to contact.full_name, {:controller => "user", :action => "show_participant", :id => contact.id, :remote => true}, :class => "Item-Text" %></td>

              </tr>
          <% end %>
        </table>
      </td>
      <td id='profile'></td>
    </table>
    <%= will_paginate @contacts %>
    <%= button_to 'Export', {:controller => "user_contacts", :action => 'export'}, :method => 'get' %></td>
<% else %>
    <p class="centralized">You have no contacts!</p>
<% end %>
