<div class="centralized">

  <h1>Pending Contacts</h1>
  <%= link_to 'Contacts', :controller => 'user', :action => 'show_contacts' %>
  <%= link_to 'Pending', :controller => 'user', :action => 'show_pending_contacts' %>
  <%= link_to 'All Participants', :controller => 'user', :action => 'show_all_participants' %>
  <%= link_to 'Rejected', :controller => 'user', :action => 'show_rejected_contacts' %>
</div>

<% if @to_accept.any? %>
    <h3>Received requests:</h3>
    <table>
      <td>
        <table>
          <tr>
            <th>Photo</th>
            <th>Name</th>
          </tr>

          <% @to_accept.each do |to_accept| %>
              <tr>
                <td>
                  <% if to_accept.requester.photo.nil? %>
                      <%= link_to image_tag("/images/defaultPerson100.jpg", :border => 0, :alt => '', :title => 'No Photo'), {:controller => "user_contacts", :action => "show_pending_contact", :id => to_accept.requester.id, :remote => true}, :class => 'Item-Image' %>
                  <% else %>
                      <img src='/people/<%= to_accept.requester.photo %>' alt='<%= to_accept.requester.photo %>'>
                  <% end %>
                </td>
                <td><%= link_to to_accept.requester.full_name, {:controller => "user_contacts", :action => "show_pending_contact", :id => to_accept.requester.id, :remote => true}, :class => "Item-Text" %></td>

              </tr>
          <% end %>
        </table>
      </td>
      <td id='profile_received'></td>
    </table>
    <%= will_paginate @to_accept %>
<% else %>
    <p>You have no incoming contact requests!</p>
<% end %>



<% if @sent.any? %>
    <h3>Sent requests:</h3>
    <table>
      <td>
        <table>
          <tr>
            <th>Photo</th>
            <th>Name</th>
          </tr>

          <% @sent.each do |person| %>
              <tr>
                <td>
                  <% if person.photo.nil? %>
                      <%= link_to image_tag("/images/defaultPerson100.jpg", :border => 0, :alt => '', :title => 'No Photo'), {:controller => "user", :action => "show_participant", :id => person.id, :remote => true}, :class => 'Item-Image' %>
                  <% else %>
                      <img src='/people/<%= person.photo %>' alt='<%= pending.requested.photo %>' class='person_thumbnail'>
                  <% end %>
                </td>
                <td><%= link_to person.full_name, {:controller => "user", :action => "show_participant", :id => person.id, :remote => true}, :class => "Item-Text" %></td>

              </tr>
          <% end %>

        </table>
      </td>
      <td id='profile'></td>
    </table>
    <%= will_paginate @sent, :param_name => :sent_page %>
<% else %>
    <p>You have no outgoing contact requests!</p>
<% end %>
