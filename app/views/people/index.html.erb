<h1>Listing people</h1>
<% if @sent.nil? %>

<% else
     if @sent %>
        <p>Mail sent.</p>
    <% else %>
        <p>Mail has not been sent.</p>
    <% end %>
<% end %>

<table>
  <tr>
    <th>Prefix</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Affiliation</th>
    <th>Email</th>
    <th>Email sent for sign up</th>
    <th>Photo link</th>
    <th>Signed up</th>
    <th>Chosen theme</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @people.each do |person| %>
      <tr>
        <td><%= person.prefix %></td>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.affiliation %></td>
        <td><%= person.email %></td>
        <% if person.signup_code %>
            <td>Yes</td>
        <% else %>
            <td>No <%= link_to 'Send Mail', {:controller => :people, :action => :send_sign_up_mail, :id => person.id} %></td>

        <% end %>
        <td><%= person.photo %></td>
        <% if person.registry %>
            <td>Yes</td>
        <% else %>
            <td>No  <%= link_to 'Resend Mail', {:controller => :people, :action => :send_sign_up_mail, :id => person.id} %></td>
        <% end %>

        <td><%= person.theme %></td>

        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: {confirm: 'Are you sure? The person will not be able to use the sent signup code.'} %></td>
      </tr>
  <% end %>
</table>

